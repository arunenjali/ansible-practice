- name : functions
  hosts : local
  connection : local
  vars :
    Technologies : Linux, Shell, Ansible , Devops
    tags :
      Prod : Live
      Nonprod : Dev
    name : Arun Kumar Enjali
    gmail : inFo@ArunEnjali.fun
    ipaddress : 192.168.1.32

  tasks :
  - name : default variables
    ansible.builtin.debug :
      msg : "Hello : {{name | default('Arun')}}"
  - name : converting string to list
    ansible.builtin.debug :
      msg : " Technologies are : {{ Technologies | split(', ')}}"

  - name : converting dictionary to list
    ansible.builtin.debug :
      msg : " Targs are : {{ tags | dict2items}}"

  - name : converting to Upper case
    ansible.builtin.debug :
      msg : " Name is : {{ name | upper}}"
  
  - name : converting to lower case
    ansible.builtin.debug :
      msg : " Email id is : {{ gmail | lower}}"

  - name : Validating the IP address
    ansible.builtin.debug :
      msg : " The ipaddress is : {{ ipaddress | ansible.utils.ipv4 }}"

  - name : executing the linux commands
    ansible.builtin.command : ls -ltr
    register : command_output

  - name : printing the linux command command_output
    ansible.builtin.debug :
      msg : "{{command_output}}"

  - name : executing the redirect commands
    ansible.builtin.command : ls -ltr > /tmp/ls_output.log
    register : redirect_output

  - name : printing the linux command command_output
    ansible.builtin.debug :
      msg : "{{redirect_output}}"